{
  "appId": "YouAppID",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist"],
  "extraFiles": {
    "from": "packages/renderer/public",
    "to": "public"
  },
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": ["dmg"]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}",
    "icon": "packages/renderer/public/logo-256x256.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
