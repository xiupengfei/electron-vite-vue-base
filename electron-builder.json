{
  "appId": "com.tn.app",
  "productName": "ElectronVueBase",
  "copyright": "Copyright Â© 2022 ${author}",
  "asar": false,
  "directories": {
    "output": "release/${version}"
  },
  "files": ["dist"],
  "extraFiles": {
    "from": "static",
    "to": "static"
  },
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": ["dmg"]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}",
    "icon": "static/logo-256x256.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
